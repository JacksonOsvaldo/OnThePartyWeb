<div class="wrapper">
  <h2><strong>Entre com seu usuÃ¡rio e senha</strong></h2>
  <%= form_for(resource, 
    :as => resource_name, 
    :url => session_path(resource_name),
    html: {id: "ContactForm"}) do |f| %>
  <%= f.error_messages %>
  <div>
    <div class="wrapper">
      <span><%= f.label :email %></span>
      <%= f.email_field :email, class: :input %>
    </div>
  </div>

  <div>
    <div class="wrapper">
      <span><%= f.label :password %></span>
      <%= f.password_field :password, class: :input %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div>
    <div class="wrapper">
      <span><%= f.check_box :remember_me %> <%= f.label :remember_me %></span>
    </div>
  </div>
  <% end -%>

  <a href="#" style="float:left" class="button" onClick="$('#ContactForm').submit()">Entrar</a>
  <% end %>

  <h2><a href="<%= new_registration_path(:user) %>"><strong>ou aproveite para</strong> criar sua conta</a></h2>
</div>